<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_mood_journal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F8F9FF">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/back_arrow"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back"
                android:tint="#2D3748"
                tools:ignore="HardcodedText" />

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mood Journal"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:gravity="center"
                android:layout_centerVertical="true"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize"/>

        </RelativeLayout>

        <!-- Add New Mood Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_button_background"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="âž• Add Mood Entry"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

        <!-- Filter Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFilterDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_button_background"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="ðŸ“… Filter Date"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnViewCalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_button_background"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="ðŸ“Š Calendar View"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnShareSummary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/gradient_button_background"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="ðŸ“¤ Share"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

        </LinearLayout>


        <!-- Mood Entries List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recent Mood Entries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize"/>

            <!-- Sort Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_button_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Sort"
                android:textSize="12sp"
                android:textColor="#2D3748"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

        </LinearLayout>

        <!-- Mood Entries List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMoodEntries"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="16dp"
            android:nestedScrollingEnabled="false" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/tvEmptyState"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ˜Š"
                android:textSize="48sp"
                android:layout_marginBottom="16dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tvEmptyStateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No mood entries yet. Add your first mood!"
                android:textSize="16sp"
                android:textColor="#2D3748"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track your daily emotions and see patterns over time"
                android:textSize="14sp"
                android:textColor="#666666"
                android:gravity="center"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize"/>

        </LinearLayout>

        <!-- Filter Indicator -->
        <LinearLayout
            android:id="@+id/layoutFilterIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#E3F2FD"
            android:padding="12dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvFilterText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Showing filtered results"
                android:textSize="14sp"
                android:textColor="#1976D2"
                tools:ignore="HardcodedText" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClearFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Clear"
                android:textColor="#1976D2"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>