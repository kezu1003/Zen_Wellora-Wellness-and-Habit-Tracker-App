<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Item_mood_entry">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Mood Emoji -->
            <TextView
                android:id="@+id/tvMoodEmoji"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="ðŸ˜Š"
                android:textSize="30sp"
                android:background="@drawable/circle_background"
                android:layout_marginEnd="16dp" />

            <!-- Mood Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2024-01-01 10:30 AM"
                    android:textSize="14sp"
                    android:textColor="#2D3748"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feeling great today!"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Edit/Delete Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/mood_action_button_background"
                    android:src="@drawable/ic_edit_mood"
                    android:contentDescription="Edit mood entry"
                    android:padding="8dp"
                    android:scaleType="centerInside" />

                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@drawable/mood_action_button_background"
                    android:src="@drawable/ic_delete_mood"
                    android:contentDescription="Delete mood entry"
                    android:padding="8dp"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>