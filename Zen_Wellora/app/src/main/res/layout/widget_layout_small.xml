<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="12dp"
    android:orientation="vertical"
    android:gravity="center"
    android:clickable="true"
    android:focusable="true">

    <!-- Compact Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¿"
            android:textSize="14sp"
            android:layout_marginEnd="4dp" />

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Habits"
            android:textColor="@color/primary"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Compact Progress Circle -->
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:gravity="center">

        <!-- Circular Progress Background -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/circle_progress_background" />

        <!-- Progress Fill -->
        <ImageView
            android:id="@+id/widget_progress_fill"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:rotation="-90"
            android:src="@drawable/circle_progress_fill" />

        <!-- Inner Circle with Percentage -->
        <TextView
            android:id="@+id/widget_percentage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/circle_inner_background"
            android:text="0%"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:maxLines="1" />

    </RelativeLayout>

    <!-- Compact Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/widget_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/success"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/text_secondary"
            android:textSize="10sp"
            android:layout_marginHorizontal="2dp" />

        <TextView
            android:id="@+id/widget_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>



